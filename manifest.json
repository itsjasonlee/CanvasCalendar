{
    "name": "Canvas Calendar",
    "description" : "Add Canvas's To Do list to Google Calendar",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "./scripts/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "./ic_assignment_black_24dp_2x.png",
        "default_popup": "popup.html"
    },
    "oauth2": {
        "client_id": "735385665036-hctb2cdb9i982vgtt2p8scerlhgm0ck6.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/calendar"
        ]
    },
    "permissions": [
        "identity",
        "https://canvas.ucdavis.edu/",
        "https://www.googleapis.com/",
        "https://apis.google.com/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}
